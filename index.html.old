        </div>
    </div>
    
    <script>
        // Mobile menu toggle
        const menuToggle = document.querySelector('.menu-toggle');
        const navItems = document.querySelector('.nav-items');
        
        menuToggle.addEventListener('click', () => {
            navItems.classList.toggle('active');
            menuToggle.classList.toggle('active');
        });
        
        // Create grid lines
        const heroGrid = document.querySelector('.hero-grid');
        
        // Horizontal lines
        for (let i = 0; i <= 16; i++) {
            const line = document.createElement('div');
            line.classList.add('hero-grid-line', 'hero-grid-line-h');
            line.style.gridRow = i + 1;
            heroGrid.appendChild(line);
        }
        
        // Vertical lines
        for (let i = 0; i <= 16; i++) {
            const line = document.createElement('div');
            line.classList.add('hero-grid-line', 'hero-grid-line-v');
            line.style.gridColumn = i + 1;
            heroGrid.appendChild(line);
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const target = document.querySelector(this.getAttribute('href'));
                
                if (target) {
                    window.scrollTo({
                        top: target.offsetTop,
                        behavior: 'smooth'
                    });
                    
                    // Close mobile menu if open
                    navItems.classList.remove('active');
                    menuToggle.classList.remove('active');
                }
            });
        });
        
        // Custom cursor
        const cursor = document.querySelector('.custom-cursor');
        
        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';
        });
        
        // p5.js Mosaic Pattern Construction Sketch
        function createMosaicSketch() {
            return function(p) {
                // Mosaic tiles
                let tiles = [];
                let pendingTiles = [];
                const tileSize = 20;
                let columns = Math.ceil(p.windowWidth / tileSize); // Use p.windowWidth
                let rows = Math.ceil(p.windowHeight / tileSize); // Use p.windowHeight
                
                // Colors
                const primaryColors = [
                    p.color('#D4AF37'), // Gold
                    p.color('#1E3F66'), // Deep blue
                    p.color('#8C1C13'), // Deep red
                    p.color('#FFE03D'), // TE Yellow
                    p.color('#1A1A1A')  // TE Black
                ];
                
                // Golden ratio for harmonious color selection
                const goldenRatio = 0.618033988749895;
                let hue = Math.random();
                
                p.setup = function() {
                    let canvas = p.createCanvas(p.windowWidth, p.windowHeight);
                    canvas.parent('p5-container');
                    p.frameRate(30);
                    
                    // Initialize grid with empty cells
                    for (let x = 0; x < columns; x++) {
                        tiles[x] = [];
                        for (let y = 0; y < rows; y++) {
                            tiles[x][y] = {
                                active: false,
                                color: null,
                                size: 0,
                                targetSize: tileSize,
                                opacity: 0,
                                targetOpacity: p.random(0.2, 0.7),
                                pattern: Math.floor(p.random(4))
                            };
                        }
                    }
                    
                    // Start with a few tiles
                    addNewTileBatch();
                };
                
                p.draw = function() {
                    p.clear();
                    
                    // Add new tiles occasionally
                    if (p.frameCount % 10 === 0 && pendingTiles.length < 10) {
                        addNewTileBatch();
                    }
                    
                    // Process pending tiles
                    processPendingTiles();
                    
                    // Draw all tiles
                    drawTiles();
                    
                    // Draw golden ratio spiral at mouse position
                    drawGoldenSpiral(p, p.mouseX, p.mouseY, 5, 0.08);
                };
                
                function addNewTileBatch() {
                    // Add 2-5 new tiles
                    const count = Math.floor(p.random(2, 6));
                    
                    for (let i = 0; i < count; i++) {
                        // Try to find an empty spot near existing tiles
                        const tile = findEmptyTileNearActive();
                        if (tile) {
                            // Generate a color using golden ratio
                            hue += goldenRatio;
                            hue %= 1;
                            
                            // Choose a color - either from primary colors or a generated one
                            let color;
                            if (p.random() < 0.7) {
                                // Use one of the primary brand colors
                                color = primaryColors[Math.floor(p.random(primaryColors.length))];
                            } else {
                                // Generate a color based on golden ratio
                                color = p.color(p.map(hue, 0, 1, 0, 360), 70, 90, 70);
                            }
                            
                            // Add to pending queue for animation
                            pendingTiles.push({
                                x: tile.x,
                                y: tile.y,
                                color: color
                            });
                        }
                    }
                }
                
                function findEmptyTileNearActive() {
                    // If no active tiles yet, start from center
                    let activeTiles = [];
                    
                    for (let x = 0; x < columns; x++) {
                        for (let y = 0; y < rows; y++) {
                            if (tiles[x] && tiles[x][y] && tiles[x][y].active) { // Added checks for tiles[x] and tiles[x][y]
                                activeTiles.push({x, y});
                            }
                        }
                    }
                    
                    if (activeTiles.length === 0) {
                        // Start in the center
                        return {
                            x: Math.floor(columns / 2),
                            y: Math.floor(rows / 2)
                        };
                    }
                    
                    // Pick a random active tile
                    const sourceTile = activeTiles[Math.floor(p.random(activeTiles.length))];
                    
                    // Look for empty neighbors
                    const directions = [
                        {dx: -1, dy: 0},
                        {dx: 1, dy: 0},
                        {dx: 0, dy: -1},
                        {dx: 0, dy: 1},
                        {dx: -1, dy: -1},
                        {dx: 1, dy: 1},
                        {dx: -1, dy: 1},
                        {dx: 1, dy: -1}
                    ];
                    
                    // Shuffle directions for more organic growth
                    shuffleArray(directions);
                    
                    for (const dir of directions) {
                        const nx = sourceTile.x + dir.dx;
                        const ny = sourceTile.y + dir.dy;
                        
                        // Check bounds
                        if (nx >= 0 && nx < columns && ny >= 0 && ny < rows) {
                             // Check if empty
                            if (tiles[nx] && tiles[nx][ny] && !tiles[nx][ny].active) { // Added checks
                                return {x: nx, y: ny};
                            }
                        }
                    }
                    
                    // If no empty neighbors found, look for any empty tile
                    const emptyTiles = [];
                    for (let x = 0; x < columns; x++) {
                        for (let y = 0; y < rows; y++) {
                           if (tiles[x] && tiles[x][y] && !tiles[x][y].active) { // Added checks
                                emptyTiles.push({x, y});
                            }
                        }
                    }
                    
                    if (emptyTiles.length > 0) {
                        return emptyTiles[Math.floor(p.random(emptyTiles.length))];
                    }
                    
                    return null; // No empty tiles left
                }
                
                function processPendingTiles() {
                    if (pendingTiles.length > 0) {
                        const tile = pendingTiles.shift();
                         if (tiles[tile.x] && tiles[tile.x][tile.y]) { // Added check
                            tiles[tile.x][tile.y].active = true;
                            tiles[tile.x][tile.y].color = tile.color;
                        }
                    }
                }
                
                function drawTiles() {
                    for (let x = 0; x < columns; x++) {
                        for (let y = 0; y < rows; y++) {
                            if (tiles[x] && tiles[x][y]) { // Added check
                                const tile = tiles[x][y];
                                
                                if (tile.active) {
                                    // Animate tile appearance
                                    if (tile.size < tile.targetSize) {
                                        tile.size += 0.5;
                                    }
                                    
                                    if (tile.opacity < tile.targetOpacity) {
                                        tile.opacity += 0.05;
                                    }
                                    
                                    // Calculate position
                                    const posX = x * tileSize;
                                    const posY = y * tileSize;
                                    
                                    // Set opacity
                                    tile.color.setAlpha(tile.opacity * 255);
                                    p.fill(tile.color);
                                    p.noStroke();
                                    
                                    // Draw tile with different patterns
                                    switch (tile.pattern) {
                                        case 0: // Square
                                            p.rect(
                                                posX + (tileSize - tile.size) / 2,
                                                posY + (tileSize - tile.size) / 2,
                                                tile.size,
                                                tile.size
                                            );
                                            break;
                                        case 1: // Circle
                                            p.ellipse(
                                                posX + tileSize / 2,
                                                posY + tileSize / 2,
                                                tile.size,
                                                tile.size
                                            );
                                            break;
                                        case 2: // Triangle
                                            p.triangle(
                                                posX + tileSize / 2,
                                                posY + (tileSize - tile.size) / 2,
                                                posX + (tileSize - tile.size) / 2,
                                                posY + tileSize - (tileSize - tile.size) / 2,
                                                posX + tileSize - (tileSize - tile.size) / 2,
                                                posY + tileSize - (tileSize - tile.size) / 2
                                            );
                                            break;
                                        case 3: // Diamond
                                            p.quad(
                                                posX + tileSize / 2,
                                                posY + (tileSize - tile.size) / 2,
                                                posX + tileSize - (tileSize - tile.size) / 2,
                                                posY + tileSize / 2,
                                                posX + tileSize / 2,
                                                posY + tileSize - (tileSize - tile.size) / 2,
                                                posX + (tileSize - tile.size) / 2,
                                                posY + tileSize / 2
                                            );
                                            break;
                                    }
                                }
                            }
                        }
                    }
                }
                
                // Draw golden ratio spiral around mouse cursor
                function drawGoldenSpiral(p, x, y, size, growth) {
                    p.push();
                    p.translate(x, y);
                    p.noFill();
                    p.stroke(255, 224, 61, 50); // Yellow with low opacity
                    
                    let goldenRatioVal = 1.618; // Renamed from goldenRatio to avoid conflict
                    let angle = 0;
                    let prevX = 0;
                    let prevY = 0;
                    
                    for (let i = 0; i < 50; i++) {
                        let radius = size * Math.pow(goldenRatioVal, growth * i);
                        let newX = radius * Math.cos(angle);
                        let newY = radius * Math.sin(angle);
                        
                        if (i > 0) {
                            p.strokeWeight(0.5);
                            p.line(prevX, prevY, newX, newY);
                        }
                        
                        prevX = newX;
                        prevY = newY;
                        angle += 0.1; // Adjust for spiral tightness
                    }
                    p.pop();
                }
                
                // Helper function to shuffle array
                function shuffleArray(array) {
                    for (let i = array.length - 1; i > 0; i--) {
                        const j = Math.floor(p.random(i + 1));
                        [array[i], array[j]] = [array[j], array[i]];
                    }
                }
                
                // Handle window resize
                 p.windowResized = function() {
                    p.resizeCanvas(p.windowWidth, p.windowHeight);
                    
                    // Recalculate columns and rows
                    const newColumns = Math.ceil(p.windowWidth / tileSize); // Use p.windowWidth
                    const newRows = Math.ceil(p.windowHeight / tileSize); // Use p.windowHeight
                    
                    // Create new tiles array for the new size
                    let newTiles = [];
                    for (let x = 0; x < newColumns; x++) {
                        newTiles[x] = [];
                        for (let y = 0; y < newRows; y++) {
                            if (tiles[x] && tiles[x][y]) { // If old tile exists, copy it
                                newTiles[x][y] = tiles[x][y];
                            } else { // Otherwise, create a new empty tile
                                newTiles[x][y] = {
                                    active: false,
                                    color: null,
                                    size: 0,
                                    targetSize: tileSize,
                                    opacity: 0,
                                    targetOpacity: p.random(0.2, 0.7),
                                    pattern: Math.floor(p.random(4))
                                };
                            }
                        }
                    }
                    tiles = newTiles; // Assign the new array to the old one
                    columns = newColumns; // Update column count
                    rows = newRows; // Update row count
                };
            };
        }
        
        // Initialize p5.js sketch
        new p5(createMosaicSketch());
        
        // Interactive company cards
        const companyCards = document.querySelectorAll('.company-card');
        
        companyCards.forEach(card => {
            card.addEventListener('mouseenter', () => {
                // Add slight rotation on hover
                card.style.transform = `translateY(-8px) rotate(${Math.random() * 2 - 1}deg)`;
            });
            
            card.addEventListener('mouseleave', () => {
                // Reset transform on mouse leave
                card.style.transform = '';
            });
        });
        
        // Section animations on scroll
        const sections = document.querySelectorAll('section');
        
        function checkScroll() {
            const triggerBottom = window.innerHeight * 0.8;
            
            sections.forEach(section => {
                const sectionTop = section.getBoundingClientRect().top;
                
                if (sectionTop < triggerBottom) {
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }
            });
        }
        
        // Apply initial styles for scroll animation
        sections.forEach(section => {
            if (section !== document.querySelector('.hero')) {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';
                section.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
            }
        });
        
        // Check scroll position on load and scroll
        window.addEventListener('load', checkScroll);
        window.addEventListener('scroll', checkScroll);

        // Modal JavaScript
        function openModal(modalId) {
            document.getElementById(modalId).style.display = "block";
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = "none";
        }

        // Close modal if user clicks anywhere outside of the modal content
        window.onclick = function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = "none";
            }
        }
    </script>
</body>
